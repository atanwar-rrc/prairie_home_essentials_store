<h1>Checkout</h1>

<% if @items.any? %>
  <p>Please review your order:</p>
  <ul class="list-group mb-4">
    <% @items.each do |product| %>
      <% quantity = @cart[product.id.to_s].to_i %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <span><%= product.name %> Ã— <%= quantity %></span>
        <span class="fw-bold"><%= number_to_currency(product.price * quantity) %></span>
      </li>
    <% end %>
  </ul>
  <%= form_with url: orders_path, method: :post, local: true do %>
    <div class="mb-3">
      <%= label_tag :name, "Your Name", class: "form-label" %>
      <%= text_field_tag :name, nil, class: "form-control", required: true %>
    </div>
    <!-- Additional fields (email, address) can be added here -->
    <%= submit_tag "Confirm Order", class: "btn btn-success" %>
  <% end %>
<% else %>
  <p>Your cart is empty.</p>
<% end %>
