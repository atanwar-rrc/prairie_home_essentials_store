<div class="col">
  <div class="card h-100 product-card">
    <% if product.image_url.present? %>
      <img src="<%= product.image_url %>" class="card-img-top" alt="<%= product.name %>">
    <% end %>
    <div class="card-body">
      <h5 class="card-title"><%= link_to product.name, product_path(product) %></h5>
      <p class="card-text"><%= truncate(product.description, length: 100) %></p>
      <p class="card-text fw-bold"><%= number_to_currency(product.price) %></p>
    </div>
    <div class="card-footer bg-white border-top-0">
      <%= button_to "Add to Cart", add_to_cart_path(product), method: :post,
            class: "btn btn-primary w-100" %>
    </div>
  </div>
</div>
