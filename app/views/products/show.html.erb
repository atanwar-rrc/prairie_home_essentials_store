<div class="card mb-4">
  <div class="row g-0">
    <% if @product.image_url.present? %>
      <div class="col-md-4">
        <img src="<%= @product.image_url %>" class="img-fluid rounded-start" alt="<%= @product.name %>">
      </div>
    <% end %>
    <div class="col-md">
      <div class="card-body">
        <h1 class="card-title"><%= @product.name %></h1>
        <p class="card-text"><%= @product.description %></p>
        <p class="card-text fw-bold">Price: <%= number_to_currency(@product.price) %></p>
        <p>
          <% @product.categories.each do |category| %>
            <span class="badge bg-secondary"><%= category.name %></span>
          <% end %>
        </p>
        <%= button_to "Add to Cart", add_to_cart_path(@product), method: :post,
              class: "btn btn-primary me-2" %>
        <%= link_to "Back to products", products_path, class: "btn btn-outline-secondary" %>
      </div>
    </div>
  </div>
</div>
