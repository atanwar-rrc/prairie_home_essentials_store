<section class="product-summary">
  <div class="row g-4 align-items-center">
    <% if @product.image_url.present? %>
      <div class="col-lg-6">
        <img src="<%= @product.image_url %>" class="img-fluid rounded-4 shadow-sm" alt="<%= @product.name %>">
      </div>
    <% end %>
    <div class="col-lg">
      <div class="d-flex flex-column gap-3">
        <div>
          <% if @product.categories.any? %>
            <div class="d-flex flex-wrap gap-2 mb-3">
              <% @product.categories.each do |category| %>
                <span class="badge-category"><%= category.name %></span>
              <% end %>
            </div>
          <% end %>
          <h1><%= @product.name %></h1>
          <p class="lead"><%= @product.description %></p>
        </div>
        <div class="product-summary__price">Price <%= number_to_currency(@product.price) %></div>
        <div class="product-summary__actions">
          <%= button_to "Add to cart", add_to_cart_path(@product), method: :post, class: "btn btn-primary" %>
          <%= link_to "Back to products", products_path, class: "btn btn-outline-secondary" %>
        </div>
      </div>
    </div>
  </div>
</section>